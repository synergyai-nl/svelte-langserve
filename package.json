{
  "name": "svelte-langserve",
  "version": "0.1.0",
  "description": "Svelte integration packages for LangServe backends",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/@svelte-langserve/*",
    "examples/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev",
    "clean": "pnpm -r --filter='@svelte-langserve/*' clean",
    "typecheck": "nx run-many -t check",
    "lint": "nx run-many -t lint",
    "lint:root": "eslint .",
    "test": "nx run-many -t test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@nx/eslint": "^21.1.2",
    "@nx/js": "^21.1.2",
    "@nx/vite": "^21.1.2",
    "@nx/workspace": "^21.1.2",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nx": "^21.1.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.15.9",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "examples/dashboard/**/*.{js,ts,svelte}": [
      "cd examples/dashboard && pnpm format",
      "cd examples/dashboard && pnpm lint"
    ],
    "examples/langserve-backend/**/*.py": [
      "cd examples/langserve-backend && uv run ruff check --fix",
      "cd examples/langserve-backend && uv run ruff format",
      "cd examples/langserve-backend && uv run pyright"
    ],
    "packages/**/*.{js,ts}": [
      "nx run svelte-langgraph:lint",
      "nx run svelte-langgraph:check"
    ]
  },
  "keywords": [
    "svelte",
    "langserve",
    "langchain",
    "ai",
    "chat",
    "socket.io",
    "frontend",
    "ui"
  ],
  "author": "svelte-langserve contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/svelte-langserve.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/svelte-langserve/issues"
  },
  "homepage": "https://github.com/your-org/svelte-langserve#readme"
}
